<% title "User" %>

<p>
  <strong>Email:</strong>
  <%=h @user.email %>
</p>
<p>
  <strong>Crypted Password:</strong>
  <%=h @user.crypted_password %>
</p>
<p>
  <strong>Password Salt:</strong>
  <%=h @user.password_salt %>
</p>
<p>
  <strong>Persistence Token:</strong>
  <%=h @user.persistence_token %>
</p>

<p>
  <%= link_to "Edit", edit_user_path(@user) %> |
  <%= link_to "Destroy", @user, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", users_path %>
</p>
