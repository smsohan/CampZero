<h1>Listing service_categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Parent</th>
  </tr>

<% @service_categories.each do |service_category| %>
  <tr>
    <td><%=h service_category.name %></td>
    <td><%=h service_category.parent.name if service_category.parent.present? %></td>
    <td><%= link_to 'Show', service_category %></td>
    <td><%= link_to 'Edit', edit_service_category_path(service_category) %></td>
    <td><%= link_to 'Destroy', service_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New service_category', new_service_category_path %>